<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFF</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontRobotoRegular">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="FontRobotoBold">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="FontRobotoThinItalic">
        <item name="fontPath">fonts/Roboto-ThinItalic.ttf</item>
    </style>

    <style name="FontRobotoMedium">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

</resources>
