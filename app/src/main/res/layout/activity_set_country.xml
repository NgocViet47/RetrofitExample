<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_country"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mypc.retrofitexample.actvity.SetCountryActivity">


    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/iconx"
        android:id="@+id/imgExit" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="14pt"
        android:layout_marginTop="8dp"
        android:text="@string/textview_select_country"
        android:textColor="@color/colorTextViewBlack"
        android:textSize="@dimen/textview_country"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:id="@+id/loVietNam"
        android:layout_width="match_parent"
        android:layout_height="83.00dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_country_item_list"
            android:layout_height="@dimen/image_country_item_list"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            app:srcCompat="@drawable/flagofvietnam" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="VietName"
            android:textColor="@color/colorTextViewBlack"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loThaiLan"
        android:layout_width="match_parent"
        android:layout_height="83.00dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/image_country_item_list"
            android:layout_height="@dimen/image_country_item_list"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            app:srcCompat="@drawable/flagofthailan" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="ThaiLan"
            android:textColor="@color/colorTextViewBlack"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loSingapore"
        android:layout_width="match_parent"
        android:layout_height="83.00dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/image_country_item_list"
            android:layout_height="@dimen/image_country_item_list"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            app:srcCompat="@drawable/flatofsingapo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="Singapore"
            android:textColor="@color/colorTextViewBlack"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>
