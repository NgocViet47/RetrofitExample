<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="310dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/buttonloginfacebook"
        android:id="@+id/imgCenterItemEvent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTypeItemEvent"
            style="@style/FontRobotoBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AAAA"
            android:textColor="@color/colorTextViewBlack"
            android:textSize="16sp" />

        <TextView
            android:text="AAAAAA"
            android:textSize="13sp"
            style="@style/FontRobotoRegular"
            android:textColor="@color/greenlight"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleItemEvent" />

        <TextView
            android:text="AAAAAA"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            style="@style/FontRobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/tvAddressItemEvent" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_height="35dp"
                    android:background="@drawable/buttonsumary"
                    android:weightSum="10"
                    android:layout_weight="1"
                    android:id="@+id/loButtonSumaryItemEvent"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        app:srcCompat="@drawable/iconreport"
                        android:id="@+id/imageView10"
                        android:layout_weight="1" />

                    <TextView
                        android:text="SUMARY"
                        android:textColor="@color/greenTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        style="@style/FontRobotoBold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="35dp"
                android:background="@color/greenTextView"
                android:weightSum="10"
                android:layout_weight="1"
                android:id="@+id/loButtonCheckInItemEvent"
                android:gravity="center">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/iconcheckin"
                    android:id="@+id/imageView10"
                    android:layout_weight="1" />

                <TextView
                    android:text="CHECK-IN"
                    android:textColor="@color/whiteLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    style="@style/FontRobotoBold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/whiteBackground">
    </LinearLayout>
</LinearLayout>